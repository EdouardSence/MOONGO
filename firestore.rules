rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ═══════════════════════════════════════════
    // FONCTIONS HELPERS
    // ═══════════════════════════════════════════
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidSeeds(seeds) {
      return seeds is int && seeds >= 0;
    }
    
    function isValidEvolutionStage(stage) {
      return stage is int && stage >= 1 && stage <= 5;
    }

    // ═══════════════════════════════════════════
    // USERS - Profil + économie (graines)
    // ═══════════════════════════════════════════
    match /users/{userId} {
      allow read: if isOwner(userId);
      
      allow create: if isOwner(userId)
                    && request.resource.data.userId == userId
                    && request.resource.data.seeds >= 0;
      
      allow update: if isOwner(userId)
                    && isValidSeeds(request.resource.data.seeds)
                    && request.resource.data.userId == resource.data.userId
                    && request.resource.data.createdAt == resource.data.createdAt;
      
      allow delete: if isOwner(userId);
      
      // Sous-collection : historique quotidien
      match /daily_progress/{date} {
        allow read, write: if isOwner(userId);
      }
    }

    // ═══════════════════════════════════════════
    // ROUTINES - Tâches et routines
    // ═══════════════════════════════════════════
    match /routines/{routineId} {
      allow read: if isOwner(resource.data.userId);
      
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      
      allow update: if isOwner(resource.data.userId)
                    && request.resource.data.userId == resource.data.userId;
      
      allow delete: if isOwner(resource.data.userId);
      
      // Sous-collection tasks (si utilisée)
      match /tasks/{taskId} {
        allow read, write: if isOwner(get(/databases/$(database)/documents/routines/$(routineId)).data.userId);
      }
    }

    // ═══════════════════════════════════════════
    // CREATURES - Collection de créatures
    // ═══════════════════════════════════════════
    match /creatures/{creatureId} {
      allow read: if isOwner(resource.data.userId);
      
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.evolutionStage == 1
                    && request.resource.data.currentXp == 0;
      
      allow update: if isOwner(resource.data.userId)
                    && request.resource.data.userId == resource.data.userId
                    && isValidEvolutionStage(request.resource.data.evolutionStage)
                    && request.resource.data.evolutionStage >= resource.data.evolutionStage;
      
      allow delete: if isOwner(resource.data.userId);
    }

    // ═══════════════════════════════════════════
    // SHOP_TRANSACTIONS - Historique achats (immutable)
    // ═══════════════════════════════════════════
    match /shop_transactions/{transactionId} {
      allow read: if isOwner(resource.data.userId);
      
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid;
      
      // Pas de modification ni suppression (historique immuable)
      allow update, delete: if false;
    }

    // ═══════════════════════════════════════════
    // PAR DÉFAUT : TOUT EST BLOQUÉ
    // ═══════════════════════════════════════════
  }
}
